@page
@model WebRazor.Pages.Users.Edit

<br />
<h2 class="text-info">@(Model.User.Id != 0 ? "Edit" : "Create new") user</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Phone"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Phone" class="form-control"/>
            </div>
            <span asp-validation-for="User.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.LastName" class="form-control"/>
            </div>
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.MiddleName"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.MiddleName" class="form-control"/>
            </div>
            <span asp-validation-for="User.MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.FirstName"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.FirstName" class="form-control"/>
            </div>
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Password"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Password" class="form-control"/>
            </div>
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="@(Model.User.Id != 0 ? "Update" : "Create")" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial" />
}