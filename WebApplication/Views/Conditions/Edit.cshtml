@model WebApplication.Models.Condition

<br />
<h2 class="text-info">
    @(Model.Id != 0 ? "Edit" : "Create new") condition
</h2>
<br />

<div class="container border p-3">
    <form method="post">
        @if (Model.Id != 0) {<input type="hidden" asp-for="Id" />}
        <input type="hidden" asp-for="UserId" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="Date"></label>
            </div>
            <div class="col-6">
                <input id="DatePicker" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <label asp-for="State"></label>
            </div>
            <div class="col-6">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id == 0 ? "Create" : "Update")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}